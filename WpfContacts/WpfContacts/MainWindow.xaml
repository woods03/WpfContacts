<Window x:Class="WpfContacts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfContacts"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">


    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/><!--List-->
            <ColumnDefinition Width="0"/><!--Contact info-->
            <ColumnDefinition/><!--Add-->
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0"> <!--Main windows-->
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!--Main window txtBox-->
            <DockPanel FlowDirection="RightToLeft">
                <Button Grid.Column="1"
                        Background="Black" Margin="10" BorderThickness="0"
                        Content="+" Foreground="#5D5D5D" FontSize="22"
                        Width="30"/>

                <Grid Margin="5">
                    <Border Background="Black" CornerRadius="15" 
                            BorderBrush="#5D5D5D" BorderThickness="2">
                        <DockPanel LastChildFill="True" FlowDirection="LeftToRight">
                            <Button Content="&#128270;" Margin="5" Foreground="#5D5D5D" 
                                    Background="Black" BorderThickness="0" FontSize="12" DockPanel.Dock="Right"/>
                            <TextBox Margin="5" Background="Black" Foreground="#5D5D5D" BorderThickness="0" TextAlignment="Left"
                                     FontSize="18"/>
                        </DockPanel>
                    </Border>
                </Grid>
            </DockPanel>

            <!--Main window listBox-->
            <StackPanel Grid.Row="1" Orientation="Vertical">

                <TextBlock Text="Name" Foreground="#5D5D5D" Margin="10,7,0,0" FontSize="13"/>


            </StackPanel>
            
        </Grid>

        <Grid Grid.Column="2"><!--Add window-->

            <StackPanel Orientation="Vertical">

                <Button x:Name="add_Photo_btn" Margin="40,40,40,0" Height="100" Width="100" ToolTip="Upload photo" Click="Add_Photo_btn_Click" ><!--Photo adding-->
                    <Image Source="/Image/def_person.png">
                        
                    </Image>
                </Button>

                <TextBlock Text="Name" Foreground="#5D5D5D" Margin="10,10,0,0"/>
                <DockPanel LastChildFill="True"><!--Name adding txtBox-->
                    <Grid Margin="5">
                        <Border Background="Black" CornerRadius="15"
                            BorderBrush="#5D5D5D" BorderThickness="2">
                            <TextBox Margin="5" Background="Black" Foreground="#5D5D5D" BorderThickness="0" TextAlignment="Left"
                                            FontSize="18"
                                     x:Name="add_Name_txtBox" TextChanged="Add_Name_txtBox_TextChanged"/>
                        </Border>
                    </Grid>
                </DockPanel>

                <TextBlock Text="Number" Foreground="#5D5D5D" Margin="10,20,0,0"/>
                <DockPanel LastChildFill="True"><!--Number adding txtBox-->
                    <Grid Margin="5">
                        <Border Background="Black" CornerRadius="15"
                            BorderBrush="#5D5D5D" BorderThickness="2">
                            <TextBox Margin="5" Background="Black" Foreground="#5D5D5D" BorderThickness="0" TextAlignment="Left"
                                         FontSize="18"
                                     x:Name="add_Number_txtBox" TextChanged="Add_Number_txtBox_TextChanged"/>
                        </Border>
                    </Grid>
                </DockPanel>


                <Grid Margin="10,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Button Content="Save" Grid.Column="0" Margin="10" FontSize="20"
                            Foreground="#5D5D5D" Background="Black" BorderThickness="0"
                            
                            x:Name="add_save_btn" Click="Add_save_btn_Click"
                            
                            /><!--Add save btn-->
                    <Button Content="Cancel" Grid.Column="1" Margin="10" FontSize="20"
                            Foreground="#5D5D5D" Background="Black" BorderThickness="0"/><!--Add Cancel btn-->

                </Grid>
                
            </StackPanel>
            
            
            
            
        </Grid>
        
        
    </Grid> 
    
    
    
</Window>
